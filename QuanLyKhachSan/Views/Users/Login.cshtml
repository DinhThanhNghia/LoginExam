@model QuanLyKhachSan.Models.User
@{
    ViewData["Title"] = "Login";
}
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title text-center">LOGIN</h2>
                </div>
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" asp-controller="Users" asp-action="Login" method="post">
                        <fieldset>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Username" class="form-control" placeholder="Username" name="username" type="text" required autofocus>
                                <span asp-validation-for="Username" runat=server class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control" placeholder="Password" name="password" type="password" value="" required>
                                <span asp-validation-for="Password" runat=server class="text-danger"></span>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                                </label>
                            </div>
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
                            <a class="text-center btn btn-lg btn-success btn-block" asp-action="Create" style="color: white; text-decoration: none;">Register</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

